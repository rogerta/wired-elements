{
  "compilerOptions": {
    "target": "es2021",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}